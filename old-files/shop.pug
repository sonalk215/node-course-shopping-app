extends layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/product.css")

block content
  main
    if prods.length > 0
      .grid
        each product in prods
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            .card__image
              img(src="https://images.unsplash.com/photo-1614350292382-c448d0110dfa?q=80&w=3540&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3Dg" alt="A Book")
            .card__content
              h2.product__price $19.99
              p.product__description A very interesting product #{product.title}!
            .card__actions
              button.btn Add to Cart
    else
      h1 No Products, please add more!











